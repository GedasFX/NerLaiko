@model System.Guid

@{
    ViewData["Title"] = "New Issue";
}

<h2>New Issue</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="New" asp-route-fridgeId="@Model">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Issue" class="control-label"></label>
                <textarea class="form-control" id="Issue" name="Issue" rows="12" autofocus></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
