@{
    ViewBag.Title = "Add new product";
    Layout = "_Layout";

    var fridgeId = ViewBag.FridgeId;
    var item = ViewBag.ItemName;
}

<form asp-action="ProductForm" asp-route-fridgeId="@fridgeId">
    @if (item == null)
    {
        <div class="input-group">
            <label for="Name">Item name</label>
            <input type="text" id="Name" name="Name" class="form-control" required />
        </div>
    }
    else
    {
        <h3>@item</h3>
        <input type="hidden" id="Name" name="Name" value="@item" />
    }
    <div class="input-group">
        <label for="Quantity">Quantity</label>
        <input type="number" id="Quantity" name="Quantity" class="form-control" required min="1" max="1000000" />
    </div>
    <div class="input-group">
        <input type="submit" class="btn btn-block" />
    </div>
</form>